<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.locations.any? %>
      <h3>Locations (<%= @user.locations.count %>)</h3>
      <ol class="locations">
        <%= render 'locations/location' %>
      </ol>
    <% end %>
  </div>

</div>
